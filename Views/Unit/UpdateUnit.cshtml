@model Units

<h2>Update @Model.Tenant_ID </h2>
@using (Html.BeginForm("UpdateUnitToDatabase", "Unit", "Post"))
    {
        <input asp-for="Tenant_ID" type="hidden" value="@Model.Tenant_ID"/>

        <label asp-for="Tenant_Name" class="control-label">Name</label>

        <input type="text" name="Tenant_Name" class="form-control" value="@Model.Tenant_Name"/>

        <label asp-for="Payment" class="control-label">Payment</label>

        <input type="number" step="0.01" name="Payment" class="form-control" value="@Model.Payment"/>

        <input type="submit" value="Update Unit" class="btn1"/>
    }