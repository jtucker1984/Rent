@model Units

<h2> Create a New Unit</h2>

@using (Html.BeginForm("InsertUnitToDatabase", "Unit", "Post"))
{
    <input asp-for="Tenant_ID" type="hidden" value="" />

    <label asp-for="Tenant_Name" class="control-label">Name</label>
    <input type ="text" name="Tenant_Name" class="form-control" value="" />

    <label asp-for="Unit" class="control-label">Unit</label>
    <input type ="number" name="Unit" class="form-control" />

    <label asp-for="Payment" class="control-label">Payment</label>
    <input type ="number" step="0.01" name="Payment" class="form-control" />

    <div>
        <label for ="">
            Select a Unit</label>
            <select class="form-control" name="Unit" value="">
                @foreach (var unit in Model.Categories)
                {
                <option value="@unit.Tenant_Name"> @unit.Tenant_ID @unit.Unit @unit.Payment </option>

                }
            </select>
    </div>
    <input type="submit" value="Create Unit" class="btn btn-primary"/>



}


